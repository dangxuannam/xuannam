    @*Nội dung*@
    <div class="page-content">

        <h2>Thêm mới mặt hàng</h2>

        @using (Html.BeginForm(Html.BeginForm("ThemMatHang", "QuanLyThucDon", FormMethod.Post, new { enctype = "multipart/form-data", area = "Admin" })))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Mã nhập nhanh", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.MaMatHang, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MaMatHang, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Tên mặt hàng:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.TenMatHang, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenMatHang, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group"  >
                    @Html.Label("Mô tả: ", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group"  >
                    @Html.Label("Nhóm hàng", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.DropDownListFor(model => model.LoaiHang, new SelectList(ViewBag.LoaiHang, "LoaiHangID", "TenLoaiHang"), new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group"   >
                    @Html.Label("Hình ảnh:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @*@Html.EditorFor(model => model.HinhAnh, new { htmlAttributes = new { @class = "form-control" } })*@
                        <input type="file" id="fileHA" name="file" class="text-input" value=""   />
                    </div>
                </div>

                <div class="form-group"   >
                    @Html.Label("Đơn giá:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group"   >
                    @Html.Label("Đơn vị tính:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.DVT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DVT, "", new { @class = "text-danger" })
                    </div>
                </div>

               


                <div class="form-group"   >
                    @Html.Label("Ghi chú:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                    </div>
                </div>

               

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-5">
                        <input type="submit" value="Thêm" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Xem thực đơn hiện tại", "Index")
        </div>
    </div>
</div>

<style >
    .form-group
    {
        height:30px;
    }
</style>